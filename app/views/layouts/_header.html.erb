<header>
  <div id="top-header">
    <div class="container">
      <ul class="header-links pull-left">
        <li><%= link_to fa_icon("", text: t(".tel"), class: "fa-phone"), root_path %></li>
        <li><%= link_to fa_icon("", text: t(".add_email"), class: "fa-envelope-o"), root_path %></li>
        <li><%= link_to fa_icon("", text: t(".address"), class: "fa-map-marker"), root_path %></li>
      </ul>
      <ul class="header-links pull-right">
        <li><%= link_to fa_icon("", text: t(".usd"), class: "fa-dollar"), root_path %></li>
        <li><%= link_to fa_icon("", text: t(".my_account"), class: "fa-user-o"), root_path %></li>
        <li><%= link_to fa_icon("", text: t(".logout"), class: "fa fa-sign-out"), method: "delete"%></li>
        <li><%= link_to "English", locale:"en" %></li>
        <li><%= link_to "Vietnamese", locale:"vi" %></li>
      </ul>
    </div>
  </div>
  <div id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="header-logo">
            <%= link_to image_tag("logo.png"), root_path, class: "logo" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="header-search">
            <form>
              <select class="input-select">
                <option value="0"><%= t ".all_categories" %></option>
              </select>
              <input class="input" placeholder="<%= t".search_here" %>">
              <button class="search-btn"><%= t ".search" %></button>
            </form>
          </div>
        </div>
        <div class="col-md-3 clearfix">
          <div class="header-ctn">
            <div class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                <i class="fa fa-shopping-cart"></i>
                <span><%= t ".your_cart" %></span>
                <div class="qty"></div>
              </a>
              <div class="cart-dropdown">
                <div class="cart-list">
                  <div class="product-widget">
                    <div class="product-img">
                      <%= image_tag("product01.png") %>
                    </div>
                    <div class="product-body">
                      <h3 class="product-name"><a href="#">product name goes here</a></h3>
                      <h4 class="product-price"><span class="qty">1x</span>$980.00</h4>
                    </div>
                    <button class="delete"><i class="fa fa-close"></i></button>
                  </div>

                  <div class="product-widget">
                    <div class="product-img">
                      <%= image_tag("product02.png") %>
                    </div>
                    <div class="product-body">
                      <h3 class="product-name"><a href="#">product name goes here</a></h3>
                      <h4 class="product-price"><span class="qty">3x</span>$980.00</h4>
                    </div>
                    <button class="delete"><i class="fa fa-close"></i></button>
                  </div>
                </div>
                <div class="cart-summary">
                  <small>3 Item(s) selected</small>
                  <h5>SUBTOTAL: $2940.00</h5>
                </div>
                <div class="cart-btns">
                  <a href="#">View Cart</a>
                  <a href="#">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
                </div>
              </div>
            </div>
            <div class="menu-toggle">
              <a href="#">
                <i class="fa fa-bars"></i>
                <span>Menu</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
